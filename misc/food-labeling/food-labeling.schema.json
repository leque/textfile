{
    "$schema":  "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://leque.github.io/textfile/misc/food-labeling/food-labeling.schema.json",
    "type": "object",
    "required": [
        "energy",
        "protein",
        "fat",
        "carbohydrate",
        "name"
    ],
    "anyOf": [
        { "required": [ "na" ] },
        { "required": [ "naclEquivalent" ] }
    ],
    "properties": {
        "protein": { "description": "たんぱく質（g）", "type": "number" },
        "fat": { "description": "脂質（g）", "type": "number" },
        "saturatedFattyAcid": { "description": "飽和脂肪酸（g）", "type": "number" },
        "n3FattyAcid": { "description": "n‐3系脂肪酸（g）", "type": "number" },
        "n6FattyAcid": { "description": "n‐6系脂肪酸（g）", "type": "number" },
        "cholesterol": { "description": "コレステロール（mg）", "type": "number" },
        "carbohydrate": { "description": "炭水化物（g）", "type": "number" },
        "saccharide": { "description": "糖質（g）", "type": "number" },
        "sugar": { "description": "糖類（単糖類又は二糖類であって、糖アルコールでないものに限る）（g）", "type": "number" },
        "dietaryFiber": { "description": "食物繊維（g）", "type": "number" },
        "zn": { "description": "亜鉛（mg）", "type": "number" },
        "k": { "description": "カリウム（mg）", "type": "number" },
        "ca": { "description": "カルシウム（mg）", "type": "number" },
        "cr": { "description": "クロム（μg）", "type": "number" },
        "se": { "description": "セレン（μg）", "type": "number" },
        "fe": { "description": "鉄（mg）", "type": "number" },
        "cu": { "description": "銅（mg）", "type": "number" },
        "na": { "description": "ナトリウム（mg）", "type": "number" },
        "mg": { "description": "マグネシウム（mg）", "type": "number" },
        "mn": { "description": "マンガン（mg）", "type": "number" },
        "mo": { "description": "モリブデン（μg）", "type": "number" },
        "i": { "description": "ヨウ素（μg）", "type": "number" },
        "p": { "description": "リン（mg）", "type": "number" },
        "niacin": { "description": "ナイアシン（mg）", "type": "number" },
        "pantothenicAcid": { "description": "パントテン酸（mg）", "type": "number" },
        "biotin": { "description": "ビオチン（μg）", "type": "number" },
        "vitaminA": { "description": "ビタミンA（μg）", "type": "number" },
        "vitaminB1": { "description": "ビタミンB1（mg）", "type": "number" },
        "vitaminB2": { "description": "ビタミンB2（mg）", "type": "number" },
        "vitaminB6": { "description": "ビタミンB6（mg）", "type": "number" },
        "vitaminB12": { "description": "ビタミンB12（μg）", "type": "number" },
        "vitaminC": { "description": "ビタミンC（mg）", "type": "number" },
        "vitaminD": { "description": "ビタミンD（μg）", "type": "number" },
        "vitaminE": { "description": "ビタミンE（mg）", "type": "number" },
        "vitaminK": { "description": "ビタミンK（μg）", "type": "number" },
        "folate": { "description": "葉酸（μg）", "type": "number" },
        "energy": { "description": "熱量（kcal）", "type": "number" },
        "naclEquivalent": { "description": "食塩相当量（g）", "type": "number" },
        "unitAmounts": {
            "type": "array",
            "description": "食品単位の表示",
            "items": {
                "type": "object",
                "required": ["unit", "amount"],
                "properties": {
                    "unit": {
                        "type": "string",
                        "description": "食品単位の単位"
                    },
                    "amount": {
                        "type": "number",
                        "description": "食品単位の量"
                    }
                }
            }
        },
        "name": { "description": "名称", "type": "string" }
    }
}
